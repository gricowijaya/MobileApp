<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="20"
    android:background="@drawable/background">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:inputType="text"
        android:hint="@string/judul"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#139487"
        android:lines="1"
        android:maxLines="1"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="16"
        android:background="@color/xanandu">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="0"
            android:textSize="270sp"
            android:textColor="@color/emerald"
            android:textAlignment="center"
            android:background="@color/mountbatten_pink"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:weightSum="5"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tanda_kurang"
            android:background="@color/mountbatten_pink"
            android:textColor="@color/emerald"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_weight="2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/reset"
            android:backgroundTint="@color/granny_apple"
            android:textColor="@color/emerald"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tanda_tambah"
            android:backgroundTint="@color/granny_apple"
            android:textColor="@color/emerald"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>
